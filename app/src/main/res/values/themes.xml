<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="defaultTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorButtonNormal">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="light" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="matrix" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/matrix_green</item>
        <item name="colorButtonNormal">@color/black</item>
        <item name="android:textColor">@color/matrix_green</item>
    </style>

</resources>